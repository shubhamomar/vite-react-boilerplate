      "dark": "linear-gradient(135deg, #374151 0%, #1f2937 50%, #111827 100%)"
    },
    "complex": {
      "aurora": "radial-gradient(ellipse at top left, #2196f3 0%, #26a69a 25%, #2196f3 50%, #1976d2 75%, #0d47a1 100%)",
      "sunset": "linear-gradient(135deg, #ffca28 0%, #ff9800 25%, #f57c00 50%, #e65100 75%, #d84315 100%)",
      "ocean": "radial-gradient(circle at 30% 70%, #e1f5fe 0%, #81d4fa 25%, #29b6f6 50%, #1976d2 75%, #0d47a1 100%)",
      "forest": "linear-gradient(145deg, #e8f5e8 0%, #c8e6c9 25%, #81c784 50%, #66bb6a 75%, #4caf50 100%)",
      "midnight": "radial-gradient(ellipse at 50% 20%, #1a237e 0%, #283593 25%, #3949ab 50%, #3f51b5 75%, #5c6bc0 100%)"
    }
  },
  "modernDesign": {
    "boundaries": {
      "philosophy": "Use shadow and background tone variations instead of visible borders",
      "shadows": {
        "subtle": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
        "soft": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
        "medium": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
        "strong": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)"
      },
      "toneVariations": {
        "card": "Use surfaceContainer against surface background",
        "section": "Use surfaceContainerLow for subtle separation",
        "emphasis": "Use surfaceContainerHigh for interactive elements",
        "floating": "Use surfaceContainerHighest for elevated content"
      }
    },
    "fluidLayout": {
      "philosophy": "CRITICAL: Layouts must utilize full screen width on all displays, especially high-resolution monitors (2K, 4K)",
      "units": {
        "preferred": ["rem", "em", "vw", "vh", "clamp()", "minmax()", "fr"],
        "avoid": ["px (except for borders, shadows, and icons)", "fixed max-width values"],
        "responsive": "Use clamp() for fluid scaling between breakpoints",
        "widthStrategy": "Always use w-full or 100% - NEVER constrain with max-width"
      },
      "containers": {
        "base": "100% width with NO max-width constraints",
        "padding": "fluid padding using clamp() or viewport-relative units that scale with screen size",
        "margins": "consistent spacing scale that adapts to screen size",
        "highResolution": {
          "strategy": "Progressive enhancement for 1600px+ displays",
          "padding": "Increase padding proportionally: 2rem at 1280px → 8rem at 2560px",
          "columns": "Add more columns on wider screens for better space utilization",
          "never": "Never use fixed max-width that constrains layout on large displays"
        }
      },
      "testingRequirements": {
        "breakpoints": ["320px", "768px", "1024px", "1440px", "1600px", "1920px", "2560px", "3840px"],
        "validation": "Ensure layouts fill entire viewport width at all breakpoints",
        "criticalCheck": "On 2560px+ displays, verify no unused horizontal space due to max-width constraints"
      }
    }
  },
  "accessibility": {
    "minTouchTargetPx": 24,
    "minContrastRatio": 4.5,
    "focusRing": { "width": "2px", "style": "solid", "colorRef": "roles.outline" }
  },
