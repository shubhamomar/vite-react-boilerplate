        "color": "#ffffff",
        "padding": "0.5rem 1rem",
        "borderRadius": "0.375rem",
        "fontWeight": "500",
        "hover": { "background": "#1976d2" }
      },
      "secondary": {
        "background": "#f3f4f6",
        "color": "#374151",
        "padding": "0.5rem 1rem",
