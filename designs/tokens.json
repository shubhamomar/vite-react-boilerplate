    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
  },
  "layout": {
    "sidebar": { "width": "16rem", "background": "#111827", "padding": "1rem" },
    "container": {
      "philosophy": "Full-width fluid containers that adapt to any screen size",
      "base": "100% width with responsive padding, NO max-width constraints",
      "padding": {
        "sm": "1rem",
        "md": "1.5rem",
        "lg": "2rem",
        "xl": "3rem",
        "2xl": "4rem",
        "hd": "5rem",
        "fhd": "6rem",
        "qhd": "8rem"
      },
      "widthStrategy": "w-full with adaptive padding - never constrain content width"
    },
    "grid": {
      "philosophy": "Progressive enhancement - more columns on wider screens",
      "columns": {
        "1": "repeat(1, minmax(0, 1fr))",
        "2": "repeat(2, minmax(0, 1fr))",
        "3": "repeat(3, minmax(0, 1fr))",
        "4": "repeat(4, minmax(0, 1fr))",
        "5": "repeat(5, minmax(0, 1fr))",
        "6": "repeat(6, minmax(0, 1fr))",
        "8": "repeat(8, minmax(0, 1fr))",
        "12": "repeat(12, minmax(0, 1fr))"
      },
      "responsive": {
        "sm": "1-2 columns max",
        "md": "2-3 columns",
        "lg": "3-4 columns",
        "xl": "4-5 columns",
        "2xl": "5-6 columns",
        "hd": "6-7 columns",
        "fhd": "7-8 columns",
        "qhd": "8+ columns"
      },
      "gap": {
        "sm": "0.5rem",
        "md": "1rem",
        "lg": "1.5rem",
        "xl": "2rem",
        "2xl": "2.5rem",
        "hd": "3rem"
      }
    }
  },
