  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px",
    "hd": "1600px",
    "fhd": "1920px",
    "qhd": "2560px",
    "uhd": "3840px",
    "philosophy": "Progressive enhancement for all screen sizes - no layout should be constrained by arbitrary max-widths"
  },
  "animation": {
    "transition": { "fast": "150ms ease-in-out", "normal": "250ms ease-in-out", "slow": "350ms ease-in-out" },
    "hover": { "scale": "1.02", "transition": "transform 150ms ease-in-out" },
    "tokens": {
      "duration": { "micro": "150ms", "short": "200ms", "medium": "250ms", "long": "400ms" },
      "easing": {
        "standard": "cubic-bezier(0.2, 0, 0, 1)",
        "emphasized": "cubic-bezier(0.2, 0, 0, 1)"
      }
    }
  },
  "meshGradients": {
    "primary": {
      "hero": "radial-gradient(circle at 25% 25%, #2196f3 0%, #1976d2 25%, #1565c0 50%, #0d47a1 75%, #1976d2 100%)",
      "card": "linear-gradient(135deg, #e3f2fd 0%, #bbdefb 50%, #90caf9 100%)",
      "subtle": "linear-gradient(145deg, #f8fbff 0%, #e3f2fd 100%)"
    },
    "secondary": {
      "success": "radial-gradient(ellipse at 50% 50%, #e0f2f1 0%, #b2dfdb 25%, #80cbc4 50%, #4db6ac 75%, #26a69a 100%)",
      "warning": "radial-gradient(ellipse at 50% 50%, #fff8e1 0%, #ffecb3 25%, #ffe082 50%, #ffd54f 75%, #ffca28 100%)",
      "error": "radial-gradient(ellipse at 50% 50%, #ffebee 0%, #ffcdd2 25%, #ef9a9a 50%, #e57373 75%, #ef5350 100%)",
